<div id="main">
	<div class="inner">
		<section>
			<!-- Form -->
			<header class="major">
				<h2>Добавление автора статьи</h2>
			</header>
			<form method="post">
				<div class="row gtr-uniform">

					<div class="col-12">
						<input type="hidden" name="blockId" id="blockId" value="@ViewData["blockId"]" placeholder="blockId" />
					</div>
					<div class="col-12">
						<input type="hidden" name="articleId" id="articleId" value="@ViewData["articleId"]" placeholder="articleId" />
					</div>

					<!-- Выбрать автора -->
					<div class="col-12">
						<select name="authorId" id="demo-category">
							<option value="0" disabled selected>- Автор -</option>
							@foreach (Author au in ViewBag.Authors)
							{
								<option value="@au.Id">@au.AuthorFIO</option>
							}
						</select>
					</div>

					<div class="col-12">
						<ul class="actions">
							<li><input type="submit" value="Добавить" class="primary" /></li>
							<li><a href="javascript: history.go(-1)" class="button">Отмена</a></li>
						</ul>
					</div>
				</div>
			</form>
		</section>
		<ul class="actions">
			<li><a href="/author/addnewauthor?blockId=@ViewData["blockId"]&articleId=@ViewData["articleId"]" class="button">Добавить нового автора</a></li>
		</ul>
	</div>
</div>
