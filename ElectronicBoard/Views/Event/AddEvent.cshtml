<div id="main">
	<div class="inner">
		<section>
			<!-- Form -->
			<header class="major">
				<h2>Добавление мероприятия</h2>
			</header>
			<form method="post">
				<div class="row gtr-uniform">

					<div class="col-12">
						<input type="hidden" name="blockId" id="blockId" value=@ViewData["blockId"] placeholder="blockId" />
					</div>

					<!-- Выбрать мероприятие -->
					<div class="col-12">
						<select name="eventId" id="demo-category">
							<option value="0" disabled selected>- Мероприятие -</option>
							@foreach(Event ev in ViewBag.Events)
							{
								<option value="@ev.Id">@ev.EventName</option>
							}
						</select>
					</div>

					<div class="col-12">
						<ul class="actions">
							<li><input type="submit" value="Добавить" class="primary" /></li>
							<li><a href="javascript: history.go(-1)" class="button">Отмена</a></li>
						</ul>
					</div>
				</div>
			</form>
		</section>
		<ul class="actions">
			<li><a href="/event/addnewevent?blockId=@ViewData["blockId"]" class="button">Добавить новое мероприятие</a></li>
		</ul>
	</div>
</div>
